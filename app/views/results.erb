<h1><%= @survey.name %></h1>
<h2 id="results">Results</h2>

<table>
<% @survey.questions.each do |question| %>
  <tr><td><h3 class="results-question"><%= question.content %></h3></td></tr>
  <tr class="table-headers">
    <td>Answer</td>
    <td>Percent</td>
    <td>Count</td>
  </tr>

  <% question.answers.each do |answer| %>
  <tr>
    <td><%= answer.content %></td>
    <td><%= (answer.responses.count / question.responses.count.to_f * 100).round(2) %>%</td>
    <td><%= answer.responses.count %></td>
  </tr>
  <% end %>
<% end %>
</table>
